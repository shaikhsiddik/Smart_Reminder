<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hi.reminder">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    /*<uses-permission android:name="android.permission.INTERNET"/>*/

    <application
        android:allowBackup="true"
        android:icon="@drawable/noti2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchPage" />
        </activity>
        <activity
            android:name=".AddNoti"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ShowDetail" />
        <activity android:name=".UpdateNoti" />
        <activity
            android:name=".SearchPage"
            android:label="IReminder"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <receiver android:name=".MyReceiver" />

        <activity android:name=".ShowNotification" />
        <activity android:name=".AlarmTone" />
        <activity android:name=".Ringing" />
        <activity
            android:name=".Splash"
            android:theme="@style/AppTheme.NoActionBar">
        //Copy//
        </activity>
        <activity android:name=".About" />
        <activity android:name=".Change" />

        <receiver android:name=".TheftReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
       /* <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/Facebook_login"/>*/
    </application>

</manifest>